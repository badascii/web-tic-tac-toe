<html>
  <body>
    <h1>Tic-Tac-Toe</h1>
    <% if @mode == 'human' %>
      <%= '<h2>Player vs Player. Fight!</h2>' %>
        <% if @game.turn == @game.player_1 %>
          <%= '<h3>Player 1 Turn</h3>' %>
        <% elsif @game.turn == @game.player_2 %>
          <%= '<h3>Player 2 Turn</h3>' %>
        <% end %>
    <% elsif @mode == 'cpu' %>
      <%= '<h2>Player vs CPU. Good luck!</h2>' %>
    <% end %>

    <% if @size == '3x3' %>
      <%= '<h2>3x3</h2>' %>
    <% elsif @size == '4x4' %>
      <%= '<h2>4x4</h2>' %>
    <% end %>


    <% if @player_move && !@player_move.empty? %>
      <%= "Your movement was #{@player_move}." %>
    <% end %>

    <table id='grid'>
      <tr>
        <td id='a1'> <%= @grid['a1'] %> </td>
        <td id='b1'> <%= @grid['b1'] %> </td>
        <td id='c1'> <%= @grid['c1'] %> </td>
      </tr>
      <tr>
        <td id='a2'> <%= @grid['a2'] %> </td>
        <td id='b2'> <%= @grid['b2'] %> </td>
        <td id='c2'> <%= @grid['c2'] %> </td>
      </tr>
      <tr>
        <td id='a3'> <%= @grid['a3'] %> </td>
        <td id='b3'> <%= @grid['b3'] %> </td>
        <td id='c3'> <%= @grid['c3'] %> </td>
      </tr>
    </table>
    <% if @grid.has_value?(0) %>
      <form method='post' action='/game/move'>
        <label for='grid_position'>Grid position</label>
        <input type='text' name='grid_position' id='grid_position' />
        <input type='submit' value='Submit' />
      </form>
    <% end %>
    <%= @message %>
  </body>
</html>