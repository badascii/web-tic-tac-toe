<html>
  <body>
    <h1>Tic-Tac-Toe</h1>
    <% if @game.mode == 'human' %>
      <%= '<h2>Player vs Player. Fight!</h2>' %>
        <% if @game.turn == @game.player_1 %>
          <%= '<h3>Player 1 Turn</h3>' %>
        <% elsif @game.turn == @game.player_2 %>
          <%= '<h3>Player 2 Turn</h3>' %>
        <% end %>
    <% elsif @game.mode == 'cpu' %>
      <%= '<h2>Player vs CPU. Good luck!</h2>' %>
    <% end %>

    <% if @game.size == '3x3' %>
      <%= '<h2>3x3</h2>' %>
    <% elsif @game.size == '4x4' %>
      <%= '<h2>4x4</h2>' %>
    <% end %>


    <% if @player_move && !@player_move.empty? %>
      <%= "Your movement was #{@player_move}." %>
    <% end %>

    <table id='grid'>
      <tr>
        <td id='a1'> <%= @game.grid['a1'] %> </td>
        <td id='b1'> <%= @game.grid['b1'] %> </td>
        <td id='c1'> <%= @game.grid['c1'] %> </td>
        <% if @game.grid['d1'] %>
          <%= "<td id='d1'>#{@game.grid['d1']} </td>" %>
        <% end %>
      </tr>
      <tr>
        <td id='a2'> <%= @game.grid['a2'] %> </td>
        <td id='b2'> <%= @game.grid['b2'] %> </td>
        <td id='c2'> <%= @game.grid['c2'] %> </td>
        <% if @game.grid['d2'] %>
          <%= "<td id='d2'>#{@game.grid['d2']} </td>" %>
        <% end %>
      </tr>
      <tr>
        <td id='a3'> <%= @game.grid['a3'] %> </td>
        <td id='b3'> <%= @game.grid['b3'] %> </td>
        <td id='c3'> <%= @game.grid['c3'] %> </td>
        <% if @game.grid['d3'] %>
          <%= "<td id='d3'>#{@game.grid['d3']} </td>" %>
        <% end %>
      </tr>
      <% if @game.grid['a4'] %>
        <td id='a4'> <%= @game.grid['a4'] %> </td>
        <td id='b4'> <%= @game.grid['b4'] %> </td>
        <td id='c4'> <%= @game.grid['c4'] %> </td>
        <td id='d4'> <%= @game.grid['d4'] %> </td>
      <% end %>
    </table>
    <% if @game.grid.has_value?(0) %>
      <form method='post' action='/game/move'>
        <label for='grid_position'>Grid position</label>
        <input type='text' name='grid_position' id='grid_position' />
        <input type='submit' value='Submit' />
      </form>
    <% end %>
    <%= @game.message %>
  </body>
</html>